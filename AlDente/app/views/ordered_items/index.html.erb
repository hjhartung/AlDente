<div class="page-header">
  <h1>Listing ordered items</h1>
</div>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Ordered Item</th>
      <th>Order ID</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ordered_items.each do |ordered_item| %>
      <tr>
        <td><%= link_to ordered_item.item.name, ordered_item %></td>
        <td><%= link_to ordered_item.order_id, order_path(ordered_item.order) %></td>
        <td><%= link_to 'Show', ordered_item %></td>
        <td><%= link_to 'Edit', edit_ordered_item_path(ordered_item) %></td>
        <td><%= link_to 'Destroy', ordered_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

